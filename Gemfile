source 'https://rubygems.org'

ruby '2.4.1'

gem 'rails', '5.2.0'
gem 'json'
gem 'protected_attributes_continued'
gem 'settingslogic'

group :development do
  gem 'sqlite3', '~> 1.3.6'
  gem 'pry-rails'
end

group :production do
  gem 'thin'
  gem 'pg'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

group :development, :test do
  gem 'rspec-rails'
  gem 'shoulda'
end

# jQuery
gem 'jquery-rails'
gem 'jquery-ui-rails'

# Kickstarter's awesome Amazon Flexible Payments gem
gem 'amazon_flex_pay'

# Configuration File
gem 'rails_config'

# For Heroku
gem 'rails_12factor'
